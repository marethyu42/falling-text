(defun line-length (n)
  "Length of the Nth line."
  (save-excursion
    (goto-char (point-min))
    (if (zerop (forward-line (1- n)))
        (- (line-end-position)
           (line-beginning-position)))))

(defun what-my-line (char &optional pos val)
  (default pos 1)
  (default val 0)
  (cond
   ((> (+ val (line-length pos)) char) pos)
   (t (what-my-line char (1+ pos) (+ val (line-length pos))))))

